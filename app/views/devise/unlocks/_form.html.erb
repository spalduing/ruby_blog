<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :email, class: "form-label", for:"unlockEmail" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg ", id:"unlockEmail", required: true  %>
  </div>

  <div class="form-group mb-3">
    <%= f.submit "Resend unlock instructions", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>