<section class="col-lg-8 mx-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div class="card-body">
      <%= render "form_edit", registrations: @registrations %>
    </div>
    <section class="card-footer">
      <div class="card-body">
          <h3>Cancel my account</h3>
          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-lg" %></p>
          <%= link_to "Back", :back %>
      </div>
    </section>
  </div>
</section>