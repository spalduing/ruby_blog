<section class="col-lg-8 mx-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div class="card-body">
      <%= render "form_edit", registrations: @registrations %>
    </div>
    <section class="card-footer">
      <div class="card-body">
        <h3>Cancel my account</h3>
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure? Cancel your account will drop all your articles and comments from the blog"
            }, class:"btn btn-danger btn-lg" %> </p>
      </div>
    </section>
  </div>
</section>
