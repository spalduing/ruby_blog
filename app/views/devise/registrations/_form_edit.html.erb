<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group mb-3">
    <%= f.label :email, class: "form-label", for:"changeEmail" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg ", id:"changeEmail", required: true  %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="form-group mb-3">
    <%= f.label :password, class: "form-label", for:"changePassword" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-lg ", id:"changePassword", required: true %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :password_confirmation, class: "form-label", for:"confirmChangePasword" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-lg ", id:"confirmChangePasword", required: true %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :current_password, class: "form-label", for:"currentPaswordValidation" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control form-control-lg ", id:"currentPaswordValidation", required: true %>
  </div>
  <div class="form-group mb-3">
    <%= f.submit "Update", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
